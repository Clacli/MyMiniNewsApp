<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/text_container_padding">

            <TextView
                android:id="@+id/news_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingBottom="@dimen/section_and_title_text_padding_Bottom"
                android:paddingEnd="@dimen/card_text_side_padding"
                android:paddingLeft="@dimen/card_text_side_padding"
                android:paddingRight="@dimen/card_text_side_padding"
                android:paddingStart="@dimen/card_text_side_padding"
                android:paddingTop="@dimen/section_and_title_text_padding_Bottom"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/section_text_size"
                android:textStyle="bold"
                tools:text="@string/news_section" />

            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/title_padding_bottom"
                android:paddingEnd="@dimen/card_text_side_padding"
                android:paddingLeft="@dimen/card_text_side_padding"
                android:paddingRight="@dimen/card_text_side_padding"
                android:paddingStart="@dimen/card_text_side_padding"
                android:paddingTop="@dimen/title_padding_top"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title_text_size"
                tools:text="@string/news_title" />

            <TextView
                android:id="@+id/news_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingBottom="@dimen/author_vertical_padding"
                android:paddingEnd="@dimen/card_text_side_padding"
                android:paddingLeft="@dimen/card_text_side_padding"
                android:paddingRight="@dimen/card_text_side_padding"
                android:paddingStart="@dimen/card_text_side_padding"
                android:paddingTop="@dimen/author_vertical_padding"
                android:textSize="@dimen/author_text_size"
                tools:text="@string/author_s_name" />

            <TextView
                android:id="@+id/date_of_web_publication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingBottom="@dimen/date_padding"
                android:paddingEnd="@dimen/card_text_side_padding"
                android:paddingLeft="@dimen/card_text_side_padding"
                android:paddingRight="@dimen/card_text_side_padding"
                android:paddingStart="@dimen/card_text_side_padding"
                android:paddingTop="@dimen/date_padding"
                android:textSize="@dimen/date_text_size"
                tools:text="@string/date_of_web_publication" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>